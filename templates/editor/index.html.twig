{% extends 'base.html.twig' %}

{% block title %}Editor index{% endblock %}

{% block body %}
    <h1>Editor index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for editor in editors %}
            <tr>
                <td>{{ editor.id }}</td>
                <td>{{ editor.name }}</td>
                <td>{{ editor.description }}</td>
                <td>
                    <a href="{{ path('editor_show', {'id': editor.id}) }}">show</a>
                    <a href="{{ path('editor_edit', {'id': editor.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('editor_new') }}">Create new</a>
{% endblock %}
