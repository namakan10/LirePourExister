<form method="post" action="{{ path('theme_delete', {'id': theme.id}) }}" onsubmit="return confirm('Etes vous sûre de vouloir supprimer ce thème ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ theme.id) }}">
    <button class="btn btn-warning">Supprimer</button>
</form>
