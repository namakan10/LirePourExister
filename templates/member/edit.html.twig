    <script type="text/javascript">
        $('#form_member').on('submit', function (event) {
            let day = document.getElementById("member_expired_at_day").value;
            let month = document.getElementById("member_expired_at_month").value;
            let year = document.getElementById("member_expired_at_year").value;
            alert(day + " " +month+" "+year);
            return false;
        })
    </script>
