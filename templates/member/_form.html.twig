            <div class="form-group">
                {{ form_label(form.address, "Adresse", {'label_attr': {'class': 'form-control-label'}}) }}
                {{ form_errors(form.address) }}
                {{ form_widget(form.address, {'attr': {'class': 'form-control form-control-alternative'}}) }}
